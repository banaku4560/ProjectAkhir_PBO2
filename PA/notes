import wx
import noname

class Beranda(noname.beranda):
    def __init__(self,parent):
        noname.beranda.__init__(self, parent)
        self.formHitung = Hitung(parent=self)

    def btnMulaiOnButtonClick( self, event ):
        self.formHitung.Show()

class Hitung(noname.formHitung):
    def __init__(self,parent):
        noname.formHitung.__init__(self,parent)
        self.result = float(self.hasil.GetLabelText())

    def hitungOnButtonClick( self, event ):
        a = float(self.inputP.GetValue())
        b = float(self.inputL.GetValue())
        c = float(self.inputG.GetValue())
        d = float(self.inputLbr.GetValue())
        self.result = (a * b *c)/10000 * d
        self.hasil.SetLabelText(str(self.result))

app = wx.App()
frame = Beranda(None)
frame.Show()
app.MainLoop()